<!DOCTYPE html>
<html lang="en">
<head>
  <title>Teachers</title>
  <% include ../partials/head %>
</head>
<body>
<section class="section ">
    <div class="container">
      <% include ../partials/menu%>
        <br/><br/>
          <h1 class="title">All Teachers Data</h1>
          <br/><br/>
  <table class="table">
      <tr>
        <th>Id</th>
        <th>First Name</th>
        <th>Last Name</th>
        <th>Email</th>
        <th>Subject</th>
        <th colspan="2">Options</th>
      </tr>
      <%dataTeachers.forEach((tampilanTeachers)=>{%>
        <tr>
            <td><%=tampilanTeachers.id%></td>
            <td><%=tampilanTeachers.first_name%></td>
            <td><%=tampilanTeachers.last_name%></td>
            <td><%=tampilanTeachers.email%></td>
            <%let subject='';%>
           <% if(tampilanTeachers.SubjectId){%>
            <% subject = tampilanTeachers.subject.subject_name%>
            <%} else {%>
            <%subject = 'unassigned';%>
           <%}%>
            <td><%=subject%></td>
            <td><a href="teacher/edit/<%=tampilanTeachers.id%>">Edit</a></td>
            <td><a href="teacher/delete/<%=tampilanTeachers.id%>">Delete</a></td>
        </tr>
     <% }, this)%>

    </table>
</body>
</html>
